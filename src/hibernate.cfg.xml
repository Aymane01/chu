<?xml version="1.0" ?>

<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost\CHU;databasename=CHU;integratedSecurity=true;</property>
		<property name="hibernate.connection.username"></property>
		<property name="hibernate.connection.password"></property>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="hbm2ddl.auto">validate</property>
		
		<mapping  resource="org/chu/db/hibernate/bean/Hopital.hbm.xml" />
		<mapping  resource="org/chu/db/hibernate/bean/Fonctionnaire.hbm.xml" />
		<mapping  resource="org/chu/db/hibernate/bean/Grade.hbm.xml" />
		<mapping  resource="org/chu/db/hibernate/bean/Interne.hbm.xml" />
		<mapping  resource="org/chu/db/hibernate/bean/Specialite.hbm.xml" />
	</session-factory>
</hibernate-configuration>
